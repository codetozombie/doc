{
  "post": {
    "tags": ["Products"],
    "summary": "Create Bundle Product",
    "description": "Create a new bundle. Requires a list of existing Simple product IDs.",
    "operationId": "createBundleProduct",
    "security": [{ "bearerAuth": [] }],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["store", "category", "name", "price", "products"],
            "properties": {
              "store": { "type": "string", "format": "uuid" },
              "category": { "type": "string", "format": "uuid" },
              "name": { "type": "string" },
              "price": { "type": "string", "format": "decimal" },
              "products": {
                "type": "array",
                "items": { "type": "string", "format": "uuid" },
                "description": "List of Simple Product IDs to include in the bundle."
              },
              "images": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "image": { "type": "string", "format": "base64" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "Bundle created successfully",
        "content": {
          "application/json": {
            "schema": { "$ref": "../../components/schemas/products/Product.json" }
          }
        }
      }
    }
  }
}