{
  "get": {
    "tags": ["Stores"],
    "summary": "List My Stores",
    "description": "Retrieve a paginated list of all active stores owned by the currently authenticated merchant.",
    "operationId": "listMyStores",
    "security": [
      { "bearerAuth": [] }
    ],
    "responses": {
      "200": {
        "description": "Successfully retrieved list of stores.",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../../components/schemas/stores/Store.json"
              }
            }
          }
        }
      },
      "401": { "description": "Unauthorized. Token is missing or invalid." }
    }
  },
  "post": {
    "tags": ["Stores"],
    "summary": "Create a New Store",
    "description": "Create a new store record. The authenticated user is automatically assigned as the owner. Requires valid country and currency codes.",
    "operationId": "createStore",
    "security": [
      { "bearerAuth": [] }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../components/schemas/stores/StoreRequest.json"
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "Store created successfully.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../components/schemas/stores/Store.json"
            }
          }
        }
      },
      "400": { "description": "Validation Error. Invalid input data (e.g., missing fields, bad format)." },
      "401": { "description": "Unauthorized. User must be logged in to create a store." }
    }
  }
}