        "tags": [
          "Orders"
        ],
        "summary": "Resend Order Notification",
        "description": "Resend the payment link/notification to the customer via WhatsApp. Only allowed for Pending orders.",
        "operationId": "resendOrder",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
