{
  "openapi": "3.0.3",
  "info": {
    "title": "PayMaster API",
    "version": "1.0.0",
    "description": "API documentation for PayMaster Africa."
  },
  "paths": {
    "/app_admin/auth/register/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Register New Admin",
        "description": "Creates a new admin user and sends an invitation email. Requires JWT Authentication and Admin permissions.",
        "operationId": "registerAdmin",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminRegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Admin created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                },
                "example": {
                  "status": "Ok",
                  "message": "Invite link sent to the email"
                }
              }
            }
          },
          "400": {
            "description": "Validation Error (e.g. Email already exists)"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/app_admin/auth/login/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Admin Login",
        "description": "Authenticates an admin. Returns a token or an OTP requirement message depending on account status.",
        "operationId": "loginAdmin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminLoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful or Next Step Required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "description": "Action type (e.g. EMAIL_VERIFICATION_REQUIRED)"
                    },
                    "token": {
                      "type": "string",
                      "description": "OTP or Temp Token"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Credentials"
          }
        }
      }
    },
    "/app_admin/auth/activate/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Activate Admin Account",
        "description": "Sets the password for a newly invited admin account. Requires the Invite Token.",
        "operationId": "activateAdmin",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminActivationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Activation Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                },
                "example": {
                  "status": "ok",
                  "message": "Admin account activation successful"
                }
              }
            }
          },
          "400": {
            "description": "Account already active or invalid token"
          }
        }
      }
    },
    "/stores/": {
      "get": {
        "tags": [
          "Stores"
        ],
        "summary": "List My Stores",
        "description": "Retrieve a list of active stores owned by the authenticated merchant.",
        "operationId": "listStores",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of stores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Store"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "post": {
        "tags": [
          "Stores"
        ],
        "summary": "Create Store",
        "description": "Create a new store. The authenticated user is automatically assigned as the owner.",
        "operationId": "createStore",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Store created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          },
          "400": {
            "description": "Validation Error"
          }
        }
      }
    },
    "/stores/{id}/": {
      "get": {
        "tags": [
          "Stores"
        ],
        "summary": "Get Store Details",
        "description": "Retrieve details of a specific store.",
        "operationId": "getStore",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique ID of the store"
          }
        ],
        "responses": {
          "200": {
            "description": "Store details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          },
          "404": {
            "description": "Store not found"
          }
        }
      },
      "patch": {
        "tags": [
          "Stores"
        ],
        "summary": "Update Store",
        "description": "Update specific fields of a store (e.g., logo, description).",
        "operationId": "updateStore",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoreRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Store updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Store"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Stores"
        ],
        "summary": "Delete Store",
        "description": "Deletes a store. If the store has existing products, it will be deactivated (soft deleted) instead of permanently removed.",
        "operationId": "deleteStore",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Store deleted or deactivated successfully"
          },
          "404": {
            "description": "Store not found"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AdminRegisterRequest": {
        "type": "object",
        "required": [
          "username",
          "first_name",
          "last_name",
          "email",
          "profile"
        ],
        "properties": {
          "username": {
            "type": "string",
            "example": "jdoe_admin"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@paymaster.com"
          },
          "profile": {
            "type": "object",
            "description": "Admin Profile details",
            "properties": {
              "role": {
                "type": "string",
                "example": "supervisor"
              },
              "department": {
                "type": "string",
                "example": "finance"
              }
            }
          }
        }
      },
      "GenericResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "AdminLoginRequest": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "example": "superadmin"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "secretPassword123"
          }
        }
      },
      "AdminActivationRequest": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "format": "password",
            "description": "The new password to set for the account",
            "example": "NewSecurePassword!23"
          }
        }
      },
      "Store": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
          },
          "name": {
            "type": "string",
            "example": "Tech Haven GH"
          },
          "description": {
            "type": "string",
            "example": "Best electronics in Accra."
          },
          "store_type": {
            "type": "string",
            "example": "Physical"
          },
          "logo": {
            "type": "string",
            "format": "uri",
            "description": "URL to the store logo",
            "example": "https://api.paymaster.com/media/stores/logos/logo.png"
          },
          "contact_email": {
            "type": "string",
            "example": "contact@techhaven.com"
          },
          "contact_phone": {
            "type": "string",
            "example": "+233501234567"
          },
          "country": {
            "type": "string",
            "example": "GH"
          },
          "currency": {
            "type": "string",
            "example": "GHS"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "StoreRequest": {
        "type": "object",
        "required": [
          "name",
          "store_type",
          "contact_phone"
        ],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 300,
            "example": "Tech Haven GH"
          },
          "description": {
            "type": "string",
            "maxLength": 500,
            "example": "Best electronics in Accra."
          },
          "store_type": {
            "type": "string",
            "enum": [
              "Physical",
              "Online"
            ],
            "example": "Physical"
          },
          "logo": {
            "type": "string",
            "format": "base64",
            "description": "Base64 encoded image string",
            "example": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAE..."
          },
          "contact_email": {
            "type": "string",
            "format": "email",
            "example": "contact@techhaven.com"
          },
          "contact_phone": {
            "type": "string",
            "example": "+233501234567"
          },
          "country": {
            "type": "string",
            "description": "Country ID or Code",
            "example": "GH"
          },
          "currency": {
            "type": "string",
            "description": "Currency ID or Code",
            "example": "GHS"
          }
        }
      }
    }
  }
}