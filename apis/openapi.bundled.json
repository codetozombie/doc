    "/app_admin/auth/register/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Register New Admin",
        "description": "Creates a new admin user and sends an invitation email. Requires JWT Authentication and Admin permissions.",
        "operationId": "registerAdmin",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminRegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Admin created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                },
                "example": {
                  "status": "Ok",
                  "message": "Invite link sent to the email"
                }
              }
            }
          },
          "400": {
            "description": "Validation Error (e.g. Email already exists)"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/app_admin/auth/login/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Admin Login",
        "description": "Authenticates an admin. Returns a token or an OTP requirement message depending on account status.",
        "operationId": "loginAdmin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminLoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful or Next Step Required",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string",
                      "description": "Action type (e.g. EMAIL_VERIFICATION_REQUIRED)"
                    },
                    "token": {
                      "type": "string",
                      "description": "OTP or Temp Token"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid Credentials"
          }
        }
      }
    },
    "/app_admin/auth/activate/": {
      "post": {
        "tags": [
          "App Admin Auth"
        ],
        "summary": "Activate Admin Account",
        "description": "Sets the password for a newly invited admin account. Requires the Invite Token.",
        "operationId": "activateAdmin",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdminActivationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Activation Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                },
                "example": {
                  "status": "ok",
                  "message": "Admin account activation successful"
                }
              }
            }
          },
          "400": {
            "description": "Account already active or invalid token"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "StoreRequest": {
        "type": "object",
        "required": [
          "name",
          "store_type",
          "contact_phone",
          "country",
          "currency"
        ],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 300
          },
          "description": {
            "type": "string",
            "maxLength": 500
          },
          "store_type": {
            "type": "string",
            "enum": [
              "Physical",
              "Online"
            ]
          },
          "logo": {
            "type": "string",
            "format": "base64",
            "description": "Base64 encoded image string",
            "nullable": true
          },
          "contact_email": {
            "type": "string",
            "format": "email"
          },
          "contact_phone": {
            "type": "string"
          },
          "country": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2
          },
          "currency": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
          }
        }
      },
      "ProductRequest": {
        "type": "object",
        "required": [
          "store",
          "category",
          "name",
          "price"
        ],
        "properties": {
          "store": {
            "type": "string",
            "format": "uuid",
            "description": "Store ID"
          },
          "category": {
            "type": "string",
            "format": "uuid",
            "description": "Category ID"
          },
          "name": {
            "type": "string",
            "maxLength": 300
          },
          "description": {
            "type": "string",
            "maxLength": 500
          },
          "price": {
            "type": "string",
            "format": "decimal"
          },
          "track_inventory": {
            "type": "boolean",
            "default": false
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "image": {
                  "type": "string",
                  "format": "base64"
                }
              }
            }
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "string",
            "format": "decimal",
            "example": "150.00"
          },
          "product_type": {
            "type": "string",
            "enum": [
              "Simple",
              "Bundle"
            ]
          },
          "track_inventory": {
            "type": "boolean"
          },
          "category": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "store": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "image": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "bundle_items": {
            "type": "array",
            "description": "Only populated if product_type is Bundle",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid",
                  "description": "The Bundle Item ID"
                },
                "product_id": {
                  "type": "string",
                  "format": "uuid",
                  "description": "The Simple Product ID"
                },
                "product": {
                  "type": "string",
                  "description": "Name of the simple product"
                }
              }
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "GenericResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "OrderItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          },
          "quantity": {
            "type": "integer"
          },
          "rate": {
            "type": "string",
            "format": "decimal",
            "description": "Price at time of order"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "reference": {
            "type": "string",
            "example": "a1B2c3D4e5"
          },
          "description": {
            "type": "string"
          },
          "amount": {
            "type": "string",
            "format": "decimal",
            "example": "150.00"
          },
          "status": {
            "type": "string",
            "enum": [
              "Pending",
              "Paid",
              "Cancelled",
              "Expired"
            ]
          },
          "payment_link": {
            "type": "string",
            "format": "uri"
          },
          "whatsapp_number": {
            "type": "string"
          },
          "merchant": {
            "type": "string",
            "format": "uuid",
            "description": "Merchant User ID"
          },
          "customer": {
            "type": "string",
            "format": "uuid",
            "nullable": true,
            "description": "Customer User ID"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrderItemRequest": {
        "type": "object",
        "required": [
          "product",
          "quantity"
        ],
        "properties": {
          "product": {
            "type": "string",
            "format": "uuid",
            "description": "ID of the product to order"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1
          }
        }
      },
      "OrderRequest": {
        "type": "object",
        "required": [
          "whatsapp_number",
          "items"
        ],
        "properties": {
          "whatsapp_number": {
            "type": "string",
            "description": "Customer's WhatsApp number (e.g., +233541234567)"
          },
          "description": {
            "type": "string",
            "maxLength": 255
          },
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/OrderItemRequest"
            }
          }
        }
      },
      "AdminRegisterRequest": {
        "type": "object",
        "required": [
          "username",
          "first_name",
          "last_name",
          "email",
          "profile"
        ],
        "properties": {
          "username": {
            "type": "string",
            "example": "jdoe_admin"
          },
          "first_name": {
            "type": "string",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@paymaster.com"
          },
          "profile": {
            "type": "object",
            "description": "Admin Profile details",
            "properties": {
              "role": {
                "type": "string",
                "example": "supervisor"
              },
              "department": {
                "type": "string",
                "example": "finance"
              }
            }
          }
        }
      },
      "AdminLoginRequest": {
        "type": "object",
        "required": [
          "username",
          "password"
        ],
        "properties": {
          "username": {
            "type": "string",
            "example": "superadmin"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "secretPassword123"
          }
        }
      },
      "AdminActivationRequest": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "format": "password",
            "description": "The new password to set for the account",
            "example": "NewSecurePassword!23"
          }
        }
      }
    }
  }
}