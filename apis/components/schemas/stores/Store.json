{
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "name": { "type": "string", "example": "Tech Haven" },
    "description": { "type": "string", "example": "Best gadgets in town" },
    "store_type": { 
      "type": "string", 
      "enum": ["Physical", "Online"],
      "example": "Online"
    },
    "logo": { 
      "type": "string", 
      "format": "uri", 
      "description": "URL to the logo image",
      "nullable": true
    },
    "contact_email": { "type": "string", "format": "email" },
    "contact_phone": { "type": "string", "example": "+233541234567" },
    "country": { "type": "string", "description": "ISO Country Code", "example": "GH" },
    "currency": { "type": "string", "description": "ISO Currency Code", "example": "GHS" },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}