{
  "type": "object",
  "properties": {
    "id": { "type": "string", "format": "uuid", "readOnly": true },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "price": { "type": "string", "format": "decimal", "example": "150.00" },
    "product_type": { 
      "type": "string", 
      "enum": ["Simple", "Bundle"] 
    },
    "track_inventory": { "type": "boolean" },
    "category": { 
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" }
      }
    },
    "store": { 
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" }
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "image": { "type": "string", "format": "uri" }
        }
      }
    },
    "bundle_items": {
      "type": "array",
      "description": "Only populated if product_type is Bundle",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid", "description": "The Bundle Item ID" },
          "product_id": { "type": "string", "format": "uuid", "description": "The Simple Product ID" },
          "product": { "type": "string", "description": "Name of the simple product" }
        }
      }
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}