{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "readOnly": true,
      "example": "b2c3d4e5-f6a7-8901-2345-678901234567"
    },
    "name": {
      "type": "string",
      "example": "Wireless Noise-Canceling Headphones"
    },
    "description": {
      "type": "string",
      "example": "High-fidelity audio with active noise cancellation."
    },
    "price": {
      "type": "number",
      "format": "decimal",
      "example": 299.99
    },
    "currency": {
      "type": "string",
      "description": "ISO 4217 currency code.",
      "example": "GHS"
    },
    "product_type": {
      "type": "string",
      "enum": ["Simple", "Bundle"],
      "example": "Simple"
    },
    "track_inventory": {
      "type": "boolean",
      "default": false,
      "example": true
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "example": true
    },
    "category": {
      "type": "object",
      "description": "The category this product belongs to.",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string", "example": "Electronics" }
      }
    },
    "store_id": {
      "type": "string",
      "format": "uuid",
      "description": "The ID of the store this product belongs to.",
      "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
    },
    "bundle_items": {
      "type": "array",
      "description": "List of items included if this is a Bundle product.",
      "items": {
        "type": "object",
        "properties": {
          "product_id": { "type": "string", "format": "uuid" },
          "quantity": { "type": "integer", "example": 1 }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "readOnly": true
    }
  }
}