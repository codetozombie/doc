{
  "type": "object",
  "required": ["store", "category", "name", "price"],
  "properties": {
    "store": { "type": "string", "format": "uuid", "description": "Store ID" },
    "category": { "type": "string", "format": "uuid", "description": "Category ID" },
    "name": { "type": "string", "maxLength": 300 },
    "description": { "type": "string", "maxLength": 500 },
    "price": { "type": "string", "format": "decimal" },
    "track_inventory": { "type": "boolean", "default": false },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "image": { "type": "string", "format": "base64" }
        }
      }
    }
  }
}